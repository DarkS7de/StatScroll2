<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.statscroll.controller.RegisterController">
    <children>
        <AnchorPane prefHeight="363.0" prefWidth="602.0" styleClass="root" stylesheets="@../styles.css" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="emailField" layoutX="228.0" layoutY="103.0" promptText="email" />
                <TextField fx:id="usernameField" layoutX="228.0" layoutY="160.0" promptText="username" />
                <PasswordField fx:id="passwordField" layoutX="227.0" layoutY="218.0" promptText="password" />
                <PasswordField fx:id="confirmPasswordField" layoutX="227.0" layoutY="272.0" promptText="confirm password" />
                <Button layoutX="266.0" layoutY="332.0" mnemonicParsing="false" onAction="#onRegister" prefHeight="39.0" prefWidth="107.0" styleClass="button-signin" stylesheets="@../styles.css" text="Confirm" />
                <Label fx:id="errorLabel" layoutX="64.0" layoutY="295.0" textFill="red" />
                <Label layoutX="178.0" layoutY="14.0" prefHeight="87.0" prefWidth="278.0" text="Register">
                    <font>
                        <Font name="Oriya MN" size="60.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</VBox>
