<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.statscroll.controller.MyCharactersController"
      spacing="10"
      style="-fx-background-color: #f0f0f0;"
      padding="10">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="backButton" text="Indietro" onAction="#handleBack"/>
        <Label text="I miei personaggi" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="classFilterComboBox" prefWidth="150"/>
        <TextField fx:id="searchField" promptText="Cerca personaggio..." prefWidth="200"/>
        <Button fx:id="resetFilterButton" text="Reset filtri" onAction="#handleResetFilter"/>
    </HBox>

    <ListView fx:id="charactersListVIew" prefHeight="300" prefWidth="400"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="deleteButton" text="Elimina" style="-fx-background-color: #ff4444; -fx-text-fill: white;"
                onAction="#handleDelete"/>
    </HBox>

</VBox>