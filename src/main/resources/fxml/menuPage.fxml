<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.statscroll.controller.MenuPageController">
    <children>
        <StackPane prefHeight="83.0" prefWidth="640.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label prefHeight="56.0" prefWidth="450.0" text="Welcome To StatScroll">
                    <font>
                        <Font name="Times New Roman Bold" size="45.0" />
                    </font>
                </Label>
            </children>
        </StackPane>

        <StackPane layoutX="213.0" layoutY="283.0" prefHeight="83.0" prefWidth="214.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button onAction="#handleDiceRoller" prefHeight="52.0" prefWidth="214.0" styleClass="button-signin" stylesheets="@../styles.css" text="Dice Roller" />
            </children>
        </StackPane>

        <StackPane layoutX="213.0" layoutY="117.0" prefHeight="83.0" prefWidth="214.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button fx:id="myCharactersButton" mnemonicParsing="false" onAction="#handleMyCharacters" prefHeight="56.0" prefWidth="214.0" styleClass="button-signin" stylesheets="@../styles.css" text="My Characters">
                    <font>
                        <Font name="Serif Bold Italic" size="25.0" />
                    </font>
                </Button>
            </children>
        </StackPane>

        <StackPane layoutX="213.0" layoutY="200.0" prefHeight="83.0" prefWidth="214.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button fx:id="createCharacterButton" mnemonicParsing="false" onAction="#handleCreateCharacter" prefHeight="56.0" prefWidth="214.0" styleClass="button-signin" text="Create New Character">
                    <font>
                        <Font name="Serif Bold Italic" size="20.0" />
                    </font>
                </Button>
            </children>
        </StackPane>

                    <!-- Bottone Wiki posizionato separatamente -->
        <Button fx:id="wikiButton" layoutX="23.0" layoutY="347.0" onAction="#openWiki" prefHeight="38.0" prefWidth="69.0" styleClass="button-signin" text="Wiki" AnchorPane.leftAnchor="23.0">
         <font>
            <Font name="Times New Roman Bold" size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
